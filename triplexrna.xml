<tool id="triplexrna" name="TriplexRNA" version="0.1.0">
    <requirements>
    </requirements>

    <!-- command -->
    <command detect_errors="exit_code"><![CDATA[
        triplexrna -o "$organism" -g "$identifier" > "$output"
    ]]></command>

    <!-- inputs -->
    <inputs>
        <param name="organism" type="select" label="organism" help="Select the target organism">
            <option value="Human" selected="true">Human</option>
            <option value="Mouse">Mouse</option>
        </param>
        <param name="identifier" type="text" value="" label="identifier" />
    </inputs>

    <!-- outputs -->
    <outputs>
        <data name="output" format="data" />
    </outputs>

    <!-- tests -->
    <tests>
        <test>
            <param name="organism" value="Human" />
            <param name="identifier" value="CDKN1A" />
        </test>
    </tests>
